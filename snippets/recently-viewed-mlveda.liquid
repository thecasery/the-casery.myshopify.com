<div id="latest-viewed-products" class="collection clearfix" style="display:none">
  <h4 class="section-header__title">Recently Viewed Product</h4>
</div>

<script>
  window.price1 = "{{ shop.money_with_currency_format }}";
</script>{% raw %}
<script id="latest-viewed-product-template"  type="text/x-jquery-tmpl">
<div id="product-${handle}" class="product" onmouseover="this.style.border='1px solid #d0d0d0';" onmouseout="this.style.border='0px';">
  <div class="image">
    <a href="${url}" class="cy">
      <img src="${Shopify.resizeImage(featured_image, "medium")}" />
    </a>
  </div>
  <div class="details">
    <a href="${url}">
      <span class="title">${title}</span>
      <span class="price">{{if price_varies}}From {{/if}}{{html Shopify.formatMoney(price, window.price1)}}</span>
    </a>
  </div>
</div>
</script>
{% endraw %}

<script type="text/javascript" charset="utf-8">
