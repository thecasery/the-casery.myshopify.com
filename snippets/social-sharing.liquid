 <ul class="inline-list social-icons" style='margin-bottom:0'>
  {% if settings.share_twitter %}
    <li>
      <a id="twitter" class="icon-fallback-text" style="color: #d0d0d0;" onmouseover="this.style.color='#b0b0b0';" onmouseout="this.style.color='#d0d0d0';">
        <span class="icon icon-twitter" aria-hidden="true"></span>
        <span class="fallback-text">Twitter</span>
      </a>
    </li>
  {% endif %}
  {% if settings.share_facebook %}
    <li>
      <a id="facebook" class="icon-fallback-text" style="color: #d0d0d0;" onmouseover="this.style.color='#b0b0b0';" onmouseout="this.style.color='#d0d0d0';">
        <span class="icon icon-facebook" aria-hidden="true"></span>
        <span class="fallback-text">Facebook</span>
      </a>
    </li>
  {% endif %}
  {% if settings.share_pinterest %}
    <li>
      <a id="pinterest" class="icon-fallback-text" style="color: #d0d0d0;" onmouseover="this.style.color='#b0b0b0';" onmouseout="this.style.color='#d0d0d0';">
        <span class="icon icon-pinterest" aria-hidden="true"></span>
        <span class="fallback-text">Pinterest</span>
      </a>
    </li>
  {% endif %}
  {% if settings.share_tumblr %}
    <li>
      <a id="tumblr" class="icon-fallback-text" style="color: #d0d0d0;" onmouseover="this.style.color='#b0b0b0';" onmouseout="this.style.color='#d0d0d0';">
        <span class="icon icon-tumblr" aria-hidden="true"></span>
        <span class="fallback-text">Tumblr</span>
      </a>
    </li>
  {% endif %}
</ul>