<div itemscope itemtype="http://schema.org/Product">

  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="{{ product.featured_image.src | img_url: 'grande' }}">
  <script src='https://code.jquery.com/ui/1.11.4/jquery-ui.min.js'></script>
  {{ 'jquery.ui.touch-punch.min.js' | asset_url | script_tag }}
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/cupertino/jquery-ui.css">
  
  {{ 'magnifier.js' | asset_url | script_tag }}
  <!-- Basic information here 
    option 0 is phone type;
    option 1 is case type;
    option 2 is color;
    option 3 is picture;
  -->
  <div class='product-container wrapper' style='margin-top:50px;'>
    <div class ='product-container-left'>
      <div id='option3' class='option3'></div>
      <img class ='back-img' src="{{ product.featured_image | img_url: 'large'}}" />
      <ul class="slider-dots"></ul>
    </div> 

    <div class='product-container-right' style='text-align:left'>
      <h3 id='#title' style='margin-top:10px; text-transform: uppercase;'>{{ product.title }} {{ product.type }} Case</h3>
      <p style='font:18px; margin-top:-20px; color:gray;'>{{ product.vendor }}</p>
      <h3 class='product-pc-money'></h3>
      <!--
      <div class='product-pc-description'>
        <hr style='margin-bottom:10px; border-color: #e0e0e0;'/>
        <img style='display:inline; width:16px; height:16px;' src="{{ 'favicon.png' | asset_url }}"/>
        <p style='display:inline'>{{ product.description }}</p>
        <hr style='margin-top:10px; border: 1px solid #e0e0e0;'/>
      </div>
      -->

      <!-- This is color -->
      <div id = "option2" class="option2"></div>
      <!-- This is phone type -->
      <select id = "option0" class="option0">
        {% for similar_product in collections.all.products %}
          {% if similar_product.title == product.title %}
            <option {% if similar_product.type == product.type %} selected='selected' {% endif %} value='{{ shop.url }}{{ similar_product.url }}'>{{ similar_product.type }}</option>
          {% endif %}
        {% endfor %}
      </select>

      <!-- This is case type -->
      <div id = "option1" class="option1"></div>

      <div class='product-mobile-description'>
        <p>{{ product.description }}</p>
      </div>
      {% if settings.social_sharing_products %}
          
        {% include 'social-sharing' %}
          
      {% endif %}
      <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
        <select name="id" id="productSelect" class="product-single__variants">
          {% for variant in product.variants %}

            <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} data-sku="{{ variant.sku }}" value="{{ variant.id }}">{{ variant.option1 }} @ {{ variant.option2 }} @ {{ variant.option3 }} @ {{ variant.image | img_url: 'large' }} @ {{ variant.price | money }}</option>

          {% endfor %}
        </select>
        <h3 class='product-mobile-money'>{{ product.selected_variant.price | money }}</h3>
        <input type="submit" name="add" id="AddToCart" value="ADD TO CART" style='width:265px;'/>
      </form>
    </div>
  </div>

  <hr/ class = "divider">

  {% if settings.product_related_enable %}
    {% include 'related-products' %}
  {% endif %}

  <hr/ class = "divider">
  <!-- Accessories -->
  {% if collections.accessory.products_count != 0 %}
    {% assign accessory = collections.accessory %}
    {% assign acc_products = accessory.products %}
    {% assign number_of_products = 4 %}
    {% assign number_of_products_to_fetch = number_of_products | plus: 1 %}

    <hr class="hr--clear hr--small">
    <div class="section-header section-header--medium">
      <h4 class="section-header__title">Accessories</h4>
    </div>
    <div class = "collection-regular">
      {% for product in acc_products limit: number_of_products_to_fetch %}
        {% unless forloop.last %}
          {% include 'product-grid-item' %}
        {% endunless %}
      {% endfor %}
    </div>
  {% endif %}
</div>